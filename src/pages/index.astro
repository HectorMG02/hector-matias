---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card/index.astro';
import IntroCard from '../components/IntroCard.astro';
import ContactsCard from '../components/ContactsCard.astro';
import TimeZone from '../components/TimeZoneCard.astro';
import AboutMe from '../components/AboutMe.astro';
import Now from '../components/Now.astro';
import ComingSoonCard from '../components/ComingSoonCard.astro';
import EverglowCard from '../components/EverglowCard.astro';
---

<Layout
    title="Héctor Matías - Consultor SaaS"
    description="Hola, soy Héctor Matías y tras 6 años de experiencia desarrollando productos para grandes empresas, ahora me dedico a la consultoría de software para startups."
>
    <main
        id="main"
        class="text-white m-auto p-2 grid gap-2 max-w-6xl overflow-hidden relative w-full sm:p-4 sm:gap-2 md:grid-cols-2 md:gap-3 md:p-6 lg:h-screen lg:grid-rows-8 lg:grid-cols-4 lg:gap-4 lg:max-h-[800px]"
    >
        <IntroCard />
        <AboutMe />
        <ContactsCard />
        <TimeZone />
        <Now />
        <EverglowCard />
        <ComingSoonCard
            colSpan="md:col-span-1"
            rowSpan="md:row-span-2 flex gap-4"
            title="Acceso a la Newsletter"
            body="Acceso a la Newsletter"
        />
        <Card colSpan="md:col-span-1" rowSpan="md:row-span-1">
            <p class="text-xs">
                ✨ Validado por startups de Silicon Valley, Google y Google For
                Startups
            </p>
        </Card>
    </main>
</Layout>
