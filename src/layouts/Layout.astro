---
import BasicLayout from './BasicLayout.astro';

interface Props {
    title: string;
    description: string;
    page?: 'travel';
    fullScreen?: string;
}

const { title, description } = Astro.props;
---

<BasicLayout title={title} description={description}>
    <div slot="loader" class="top-0 bottom-0 right-0 left-0"></div>
    <slot />
</BasicLayout>
